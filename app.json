{
  "expo": {
    "name": "Accord",
    "slug": "accord",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#8B5CF6"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.accord.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Accord needs access to your photos to upload profile pictures.",
        "NSCameraUsageDescription": "Accord needs access to your camera to take profile photos.",
        "NSLocationWhenInUseUsageDescription": "Accord uses your location to find compatible matches nearby.",
        "NSUserTrackingUsageDescription": "This allows us to provide personalized matching and improve your experience."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#8B5CF6"
      },
      "package": "com.accord.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Accord needs access to your photos to upload profile pictures."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Accord uses your location to find compatible matches nearby."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#8B5CF6"
        }
      ]
    ],
    "scheme": "accord",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
